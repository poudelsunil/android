<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/bgColor">



    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="40sp" />

    <Button
        android:id="@+id/btnLunchMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/googleMap"
        android:textSize="30sp"
        android:background="@color/red"
        android:layout_weight="1"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btnLunchStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/playStore"
        android:textSize="30sp"
        android:background="@color/green"
        android:layout_weight="1"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btnSendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendEmail"
        android:textSize="30sp"
        android:background="@color/blue"
        android:layout_weight="1"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUserId"
        android:hint="Enter your user id"
        android:layout_weight="0"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:hint="Enter your password here"
        android:password="true"
        android:layout_weight="0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNextActivity"
        android:text="Login"
        android:textSize="30sp"
        android:layout_weight="1"
        android:background="@color/abc_search_url_text_normal"
        android:layout_margin="20dp"
        android:layout_gravity="right"/>



</LinearLayout>
