<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/llRootLayoutOfActivityLayout"
    android:layout_margin="20dp">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/btnGotoSecondActivity"
        android:layout_below="@id/tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/abc_search_url_text_normal"
        android:layout_below="@id/btnGotoSecondActivity"
        android:id="@+id/tvForSep"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't touch on screen otherwise i will move"
        android:id="@+id/btnToAnimate"
        android:layout_below="@id/tvForSep"
        android:background="@drawable/round_button"/>


</RelativeLayout>
